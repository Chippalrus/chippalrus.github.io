---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';

type Props =
{
  src: string | ImageMetadata;
  alt: string;
};

const props = Astro.props;
const { src, alt } = Astro.props;
---
{
  typeof src === 'string' ? (
    <img class:list={'img-'+alt} class="imgCRD hover:z-50 aspect-square rounded-lg object-cover" {...props} />
    <figure class:list={'img_'+alt} class="imgFigs transition-fade hidden row-start-2 top-0 left-0 bottom-0 right-0 md:target:z-50 col-start-1 row-end-1 col-span-full items-center onload-animation">
      <img class="imgEX" {...props} />
    </figure>
  ) : (
  <a href={'#img_' + alt}><Image class:list={'img-' + alt + ' imgCRD hover:z-50 aspect-square rounded-2xl object-cover'} {...props} /></a>
    <div id={'img_' + alt} class:list={'img_' + alt + ' imgFigs hidden activeIMG target:block row-start-2 top-0 left-0 bottom-0 right-0 col-start-1 row-end-1 col-span-full items-center onload-animation'}>
      <Image class="imgEX" {...props} />
    </div>
  )
}
<style>
.imgEX
{
  margin-left:auto;
  margin-right:auto;
}
.imgCRD{transition: 0.3s;}
.imgCRD:hover
{
  filter: blur(0px);
  transform-style: preserve-3d;
  transform: perspective(800px) rotateY(27deg);
  box-shadow: 0 15px 25px rgba(0,0,0,0.2);
}
.activeIMG
{
  display:block!important;
}
</style>
<script define:vars={{alt}}>
  const eImg = document.querySelector( `.img-${alt}` );
  if( null != eImg )
  {
    eImg.addEventListener
    ( 'click'
    , () => 
    { 
      //const actIMG = document.querySelector( '.activeIMG' );
      //if( null != actIMG ){ actIMG.classList.remove( 'activeIMG' ); }

      const actIMGs = document.querySelectorAll( '.activeIMG' );
      if( actIMGs.length > 0 )
      {
        actIMGs.forEach( actIMG =>
        {
          actIMG.classList.remove( 'activeIMG' );
        });
      }

      const eFig = document.querySelector( `.img_${alt}` );
      if( null != eFig ){ eFig.classList.add( 'activeIMG' ); }
    });
  }
</script>